<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<Button android:id="@+id/system"
			android:text="System"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
			
	<Button android:id="@+id/media"
			android:text="Media"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
			
	<Button android:id="@+id/ringer"
			android:text="Ringer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	<Button android:id="@+id/alarm"
			android:text="Alarm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	<Button android:id="@+id/incall"
			android:text="In-Call"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	<Button android:id="@+id/all"
			android:text="All"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	<Button android:id="@+id/ringmode"
			android:text="Ringmode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	<Button android:id="@+id/vibration"
			android:text="Vibration"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			

</LinearLayout>
</ScrollView>
