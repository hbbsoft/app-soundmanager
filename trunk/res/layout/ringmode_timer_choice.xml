<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dip" >
    
    <TextView android:text="@string/setRingmodeChange"
    		  android:layout_width="wrap_content"
    		  android:layout_height="wrap_content"
				android:textSize="20dip" />
    <RadioGroup android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">

		<RadioButton android:id="@+id/ring_vibrate"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/ring_vibrate" />

		<RadioButton android:id="@+id/ring_only" android:text="@string/ring_only"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />

		<RadioButton android:id="@+id/vibrate_only" android:text="@string/vibrate_only"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />

		<RadioButton android:id="@+id/silent" android:text="@string/silent"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />
	</RadioGroup>
    <Button android:id="@+id/ok_button"
    		 android:layout_width="100dip"
    		 android:layout_height="wrap_content"
    		 android:text="OK"
    		 android:layout_marginTop="10dip" />
    
</LinearLayout>