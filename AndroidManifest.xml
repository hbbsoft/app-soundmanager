<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roozen.SoundManager"
    android:versionCode="19"
    android:versionName="2.1.0">

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/main_icon"
        android:debuggable="true"
        android:label="@string/app_name">

        <!-- Activities -->
        <activity android:name=".MainSettings"
        android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.roozen.intent.SOUND_CONTROL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".MoreSettings"
        android:screenOrientation="portrait"></activity>

        <activity android:name=".TutorialActivity"
              android:theme="@android:style/Theme.Dialog"
        android:screenOrientation="portrait"></activity>

        <receiver android:name="com.roozen.SoundManager.receivers.Bootup">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET"/>
                <action android:name="android.intent.action.TIME_ZONE_CHANGED"/>
            </intent-filter>
        </receiver>

        <receiver android:name="com.roozen.SoundManager.receivers.Reinstall">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_CHANGED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="RingmodeToggle"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.roozen.intent.RINGMODE_CONTROL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="VibrateSettings"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.roozen.intent.VIBRATION_CONTROL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="MuteActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.roozen.SoundManager.schedule.ScheduleList"
                android:screenOrientation="portrait"/>
        <activity
            android:name="com.roozen.SoundManager.schedule.ScheduleEdit"
                android:screenOrientation="portrait"/>
            
        <activity android:name="VolumeDialog" android:theme="@android:style/Theme.Dialog"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.roozen.intent.VOLUME_CONTROL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.roozen.SoundManager.receivers.TimeChangeReceiver">
            <intent-filter>
            </intent-filter>
            <intent-filter>
            </intent-filter>
        </activity>

        <!-- Services -->
        <service android:name="com.roozen.SoundManager.services.ChangeVolume" />
        <service android:name="com.roozen.SoundManager.services.BootupService" />

        <!-- Receivers -->
        <receiver android:name="com.roozen.SoundManager.receivers.SoundTimer" />

        <!-- Providers -->
        <provider
            android:name="com.roozen.SoundManager.provider.ScheduleProvider"
            android:authorities="com.roozen.soundmanager.provider.scheduleprovider" />

    </application>

    <!-- Permissions -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
</manifest> 